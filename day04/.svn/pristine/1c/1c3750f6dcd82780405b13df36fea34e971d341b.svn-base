<script type="text/javascript">
    $(function(){
        //错误弹窗
        var errcode = "{$:errcode jsencode=”true”}";
        var errmsg = "{$:errmsg jsencode=”true”}";
        if(errmsg.indexOf("jsencode") <= -1){
            if (errcode || errmsg) {
                errShow({ "errmsg": errmsg, "errcode": errcode });
            }
        }
    })

    function showMsg(){
        $.ajax({
            url: "",
            type:"post",
            dataType:"json",
            data:{

            },
            success: function(msg){
                if(!errShow(msg)){
                    return;
                }

                if(msg.balckimage){
                    $("#headimg").css("background-image", "url("+ msg.balckimage +")");
                }
                $("#phone").html(msg.phone);
                $("#name").html(msg.name);
                
            }
        })
    }


    function errShow(obj) {
        if (obj.errmsg || obj.errcode) {
            $("#remind02 .motwo_wz").html(obj.errmsg);
            if(obj.errcode){
                $("#remind02 .motwo_wz404").html("错误码:" + obj.errcode);
            }else {
                $("#remind02 .motwo_wz404").css("display", "none");
            }
            $("#remind02").css("display", "block");
            return false;
        }
        return true;
    }
