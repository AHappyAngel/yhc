<script src="../../js/KaNiu/jquery-1.10.2.7l.min.js" type="text/javascript"></script> 
 <script type="text/javascript">
    var errcode = "{$:errcode jsencode=”true”}";
    var errmsg = "{$:errmsg jsencode=”true”}";
    if (/^\d+$/.test(errcode)) {
        if (errmsg) {
            $("#errmsg").html(errmsg);
            if (errcode) {
                $("#errcode").html("错误码:" + errcode);
            }
        }
    }
    $(function () {
        var real_name = "{$:real_name jsencode=”true”}";
        if (real_name) {
            $("#name").val(real_name);
            $("#name").attr("readonly", "true");
        }
        $("input").focusin(function () {
            if ($(this).val().indexOf("请输入") > -1) {
                $(this).attr("style", "color:black");
                $(this).val("");
            }
        });
        $("#name").focusout(function () {
            if ($(this).val() == "" || !isName($(this).val())) {
                $(this).val("请输入姓名");
                $(this).attr("style", "color:red");
            }
        });
        $("#id").focusout(function () {
            if ($(this).val() == "" || !Isid($(this).val())) {
                $(this).val("请输入身份证号");
                $(this).attr("style", "color:red");
            }
        });
        $("#qq").focusout(function () {
            if ($(this).val() == "" || !IsNumber($(this).val())) {
                $(this).val("请输入qq号");
                $(this).attr("style", "color:red");
            }
        });
        $("#base-input").focusout(function () {
            if ($(this).val() == "" || !IsEmail($(this).val())) {
                $(this).val("请输入邮箱");
                $(this).attr("style", "color:red");
            }
        });
        $("input").bind('input propertychange', function () {
            if ($("#name").val() != "" && Isid($("#id").val()) && IsNumber($("#qq").val()) && IsEmail($("#base-input").val())) {
                $("#addbank_button").attr("class", "pass");
                $("#addbank_button").removeAttr("disabled");
            } else {
                $("#addbank_button").attr({ "disabled": "", "class": "" });
            }
        })

        $("#addbank_button").on("click", function () {
            if ($("#name").val() != "" && Isid($("#id").val()) && IsNumber($("#qq").val()) && IsEmail($("#base-input").val())) {
                $("form").submit();
            } else {
                $("#errmsg").html("请先完善信息！");
                $("#errcode").html("");
                $(".modal01").css("display", "block");
                return;
            }
        })

    })
    //关闭错误弹窗
    function closeErrMsg(){
        location.href = "";
        $('.modal01').css('display','none');
    }
    //id
    function Isid(obj) {
        Reg = /^(\d{6})(\d{4})(\d{2})(\d{2})(\d{3})([0-9]|X|x)$/;
        if (Reg.test(obj)) {
            return true;
        } else {
            return false;
        }
    }
    function IsEmail(obj) {
        Reg = /^\w{5,}@\w+(\.\w+)+$/;
        if (Reg.test(obj)) {
            return true;
        } else {
            return false;
        }
    }
    function IsNumber(obj) {
        Reg = /^\d+$/;
        if (Reg.test(obj)) {
            return true;
        } else {
            return false;
        }
    }

    /**/
    function isName(obj) {
        var reg = /^[\u4e00-\u9fa5]{2,}$/;
        if (obj == undefined || obj == "" || !reg.test(obj)) {
            return false;
        }
        return true;
    }
</script>
