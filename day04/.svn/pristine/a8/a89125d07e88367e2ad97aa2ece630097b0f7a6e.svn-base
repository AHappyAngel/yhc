<script type="text/javascript">
    $(function () {
        var wait = 60;
        var real_phone='{$:yzlyh_telphone jsencode="true"}';
        if(/^\d+$/.test(real_phone)){
            $("#phone").val(real_phone);
            $("#phone").attr("readonly","true");
        }

        var errcode = "{$:errcode jsencode=”true”}";
        var errmsg = "{$:errmsg jsencode=”true”}";
        if (errcode || errmsg) {
            $("#errmsg").html(errmsg);
            if (errcode) {
                $("#errcode").html("错误码:" + errcode);
            }
            $(".modal01").css("display", "block");
        }

        //button pass
        $("input").bind('input propertychange', function () {
            if ( chk_number($("#oldyz_m").val()) && chk_phone($("#phone").val())) {
                $("#oldyz_button").attr("class", "pass");
                $("#oldyz_button").removeAttr("disabled");
            } else {
                $("#oldyz_button").attr({ "disabled": "", "class": "" });
            }
        })

        /*$("#phone").on("focusout", function(){
            chkPhone();
        });*/

        $("#phone").on("focusin", function(){
            if($(this).val().indexOf("请输入") > -1){
                $(this).val("");
            }
            $(this).css("color", "black");
        });

        $("#btnemail").on("click", function () {
            if(!chkPhone()){
                return;
            }
            var userPhone;
            '{$:usertype jsencode="true"}' == "New" ? userPhone = "NewPhone" : userPhone = "OldPhone";
            //alert(userPhone);
            $.ajax({
                url: "/Interface.ashx",
                type: 'get',
                dataType: 'text',
                cache: false,
                data: { userPhone : $("#phone").val(), "type": "SenSMS" },
                success: function (ErrMeg) {
                    if (ErrMeg != "False") {
                        $("#oldyz_m").val(ErrMeg);
                        $("#oldyz_m").attr("style", "color:red");
                        wait = 5;
                    }else if(ErrMeg == "False"){
                        wait=60;
                    }
                }
            });
            time($(this));
        })

        $("#oldyz_m").focus(function () {
            $(this).val("");
        });

        
    })
    function time(o) {
        if (wait == 0) {
            o.removeAttribute("disabled");
            o.value = "获取验证码";
            wait = 60;
            o.style.fontSize = "0.8rem";
            o.style.background = "#f64349";
        } else {
            o.setAttribute("disabled", true);
            o.value = wait + "秒后重新发送";
            o.style.fontSize = "0.6rem";
            o.style.background = "#ccc";
            wait--;
            setTimeout(function () {
                        time(o)
            },1000);
        }
    }

    function chkPhone(){
        if(!chk_phone($("#phone").val())){
            $("#phone").val("手机号码格式错误");
            $("#phone").css("color", "red");
            return false;
        }else {
            return true;
        }
    }

</script>
