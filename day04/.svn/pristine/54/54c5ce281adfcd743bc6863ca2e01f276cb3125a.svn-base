<script src="../../js/KaNiu/jquery-1.10.2.7l.min.js" type="text/javascript"></script>
<script type="text/javascript">
$(function (){
	var Months = $(".months").html();
	
	if(Months == "1"){
		$("#Select").append('<option value="0">请选择还款期数</option><option value="2">2周</option>');
	} else if(Months == "12"){
		$("#Select").append(
			'<option value="0">请选择还款期数</option>' + 
			'<option value="6">6期</option>' + 
			'<option value="9">9期</option>' + 
			'<option value="12">12期</option>'
		);
	}
	
	
	$("input").focusin(function () {
		if ($(this).val().indexOf("请填写") > -1) {
			$(this).attr("style", "color:black");
			$(this).val("");
		}
	});
	$("#Number").bind('input propertychange',function () {
		if ($(this).val() == "" || !IsNumber($(this).val())) {
			$(this).val("请填写申请金额");
			$(this).attr("style", "color:red");
		} else if ( $(this).val() > parseInt($(".apptp_mb").html()) ){
			$(".hmoney").html("最高申请金额不能大于最高贷款额度");
			$(".modal03").css("display","block");
			$(this).val("请填写申请金额");
			$(this).attr("style", "color:red");
		}
	});
	$("#Select").bind("focusout change", function () {
		if ($(this).val() == "0") {
			$(this).attr("style","color:red");
		} else {
			$(this).attr("style", "color:black");
		}
	});
    $("#type_select").bind("focusout change", function () {
        if ($(this).val() == "0") {
            $(this).attr("style","color:red");
        } else {
            $(this).attr("style", "color:black");
        }
    });
	$("#Number").bind('input propertychange',function (){
		onsele()
	});
	$("#Select").bind('change',function (){
		onsele()
	});
    $("#type_select").bind('change',function (){
        onsele()
    });
	function onsele(){
		/*var jkMoney = $("#Number").val();
		var qxMoney = $("#Select").val();
		var hkMoney = $("#displayCalculation");
		var yfthValue;
		yfthValue = (jkMoney * 0.02 *　qxMoney + parseFloat(jkMoney)) / qxMoney;
		if( yfthValue != Infinity ){
			hkMoney.html( Math.round(yfthValue*100)/100 );
		} else {
			hkMoney.html("");
		}*/
		if(IsNumber($("#Number").val()) && $("#Select").val() > 0 &&  $("#type_select").val() > 0){
			$("#Submit").attr("class","pass");
			$("#Submit").removeAttr("disabled");
		} else {
			$("#Submit").attr({"disabled":"", "class":""});
		}
	}
})

function IsNumber(obj) {
    Reg = /^\d+$/;
    if (Reg.test(obj)) {
        return true;
    } else {
        return false;
    }
}
</script>
